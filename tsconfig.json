{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["bun"],
    "jsxImportSource": "hono/jsx",
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
